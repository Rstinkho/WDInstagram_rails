<h2><%= @post.title %></h2>

<p> <%= @post.url %></p>
<p><%= @post.created_at %></p>
<p><%= @post.description %></p>

<hr>
<%= link_to "edit", edit_post_path(@post), :class => 'btn btn-default' %>

<%= link_to "delete", post_path(@post), method: :delete, data: {confirm: 'Really?'}, :class => 'btn btn-default' %>

